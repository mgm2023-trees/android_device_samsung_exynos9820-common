# Allow S Pen HAL service to be found
hal_client_domain(system_app, hal_samsung_spen)

allow system_app system_app:dir getattr;
allow system_app system_app_data_file:dir search;
allow system_app sysfs:dir {read};
allow system_app sysfs:dir {open};

# Allow KProfiles to be adjusted by a system app
allow system_app sysfs_kprofiles:file rw_file_perms;
